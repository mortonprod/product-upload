{
  "files": [
    "./src/reviews.tsx",
    "./src/render.tsx"
 	],
  "compilerOptions": {
		"module": "commonjs",
		"moduleResolution": "node",
		"types": ["node"],
		"typeRoots": [ "./node_modules/@types" ],
    "removeComments": true,
    "noImplicitAny": true,
    "target": "es5",
    "jsx": "react",
    "experimentalDecorators": true,
    "lib": [ "es2015", "dom" ],
    "emitDecoratorMetadata": true,
    "noEmitOnError": false,
    "declaration": true,
    "sourceMap": true,
    "outDir": "./"
  },
  "include": [
    "./src/*",
    "./src/**/*",
    "./src/images/*"
  ],
  "exclude": [
    "node_modules",
    "./src/__tests__/*"
  ]
}
